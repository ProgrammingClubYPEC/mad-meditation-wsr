<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/quot_back_color">
    <TextView
        android:id="@+id/quoteTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"
        android:textFontWeight="500"
        android:textColor="@color/back"
        android:textSize="25sp"
        android:fontFamily="@font/alegreya_regular"/>
    <TextView
        android:id="@+id/quoteDescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:maxLines="2"
        android:textFontWeight="500"
        android:textColor="@color/back"
        android:textSize="15sp"
        android:fontFamily="@font/alegreya_regular"
        app:layout_constraintTop_toBottomOf="@id/quoteTitleTextView"
        app:layout_constraintEnd_toStartOf="@id/quoteImageView"
        app:layout_constraintStart_toStartOf="@id/quoteTitleTextView"
        />

    <Button
        style="@style/BtnStyle"
        android:layout_width="140dp"
        android:layout_height="39dp"
        android:backgroundTint="@color/back"
        android:padding="0dp"
        android:layout_marginHorizontal="0dp"
        app:layout_constraintStart_toStartOf="@id/quoteTitleTextView"
        app:layout_constraintTop_toBottomOf="@id/quoteDescriptionTextView"
        android:layout_marginTop="15dp"
        android:textFontWeight="500"
        android:fontFamily="@font/alegreya_sans"
        android:text="@string/quote_more_details_text"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/quoteImageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginVertical="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</merge>