<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_btn</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AddPhotoStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/background_feeling</item>
        <item name="backgroundTint">@color/add_photo_btn_back_color</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">115dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:textSize">45sp</item>
        <item name="android:text">+</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>